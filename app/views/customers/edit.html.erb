<div class="contextual">
  <%= link_to(l(:button_back), {:controller => 'businesses'}, :class => 'icon icon-move') %>
</div>

<h2><%=h l(:label_customer) + ' :: ' + @customer.name %></h2>

<% labelled_tabular_form_for :customer, @customer, :url => {:id => @customer.id} do |data| %>
  <%= render :partial => 'customers/form', :locals => {:form => data} %>
  <%= data.submit l(:button_edit) %>
<% end %>
